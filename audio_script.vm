function create () {
  VOICE="${3:-Yannick}"
  if ! grep -qw "$VOICE:$2" Audio/$1.txt; then
    say -v $VOICE $2 -o gen/temp.aiff && ffmpeg -y -i gen/temp.aiff Audio/$1.ogg
    echo "$VOICE:$2" > Audio/$1.txt
  fi
}

function copy () {
  cp Audio/src/$2.$3 Audio/$1.$3
}

function copyn () {
  ffmpeg -y -i Audio/src/$2.$3 -af 'dynaudnorm=n=0:c=1' Audio/$1.ogg
}

